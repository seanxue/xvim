# Syntax style
# https://spec.editorconfig.org/

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[{Makefile,makefile}]
indent_style = tab
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx,css,less,sass,scss,vue,py}]
indent_size = 4
